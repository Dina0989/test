{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
    <div class="blog-post">
        <h2 class="blog-post-title">
            <a href="{{ path('_show', { 'id': post.id }) }}">
                        {{ post.title }}
            </a>
        </h2>
        <p class="blog-post-meta">{{ post.created|date('d.m.Y') }}
            {% if post.published %}
                <span class="glyphicon glyphicon-ok"></span>
            {% else %}
                <span class="glyphicon glyphicon-remove     "></span>
            {% endif %}
            {#by <a href="#">Mark</a>#}</p>
        <p>{{ post.description }}</p>

    </div><!-- /.blog-post -->
        {% endfor %}
    <nav>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>
    </nav>
{% endblock %}
